<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFEB3B">

        <!-- App Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Free 2 Move"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- User Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Your latest Bookings "
                android:textSize="20sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Scooter Booking Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Scooter Booking Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/scooter_booking_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days: "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/scooter_days_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="000"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/scooter_address_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Fee: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/scooter_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#####"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/scooter_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#####"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Car Booking Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Car Booking Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/car_booking_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days : "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/car_days_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="000"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/car_address_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Fee: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/car_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#####"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/car_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#####"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- TukTuk Booking Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="TukTuk Booking Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/tuktuk_booking_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tuktuk_days_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="000"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tuktuk_address_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Fee: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tutuk_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#####"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tuktuk_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#####"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:backgroundTint="#000000"
            android:text="Back to Home"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
